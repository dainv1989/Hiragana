<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    tools:context=".ExcerciseActivity">

    <TextView
        android:id="@+id/txtExerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/topnav_height"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/score_title"
        android:textAllCaps="true"
        android:textColor="@color/accent"/>

    <LinearLayout
        android:id="@+id/groupQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_xlarge"
            android:paddingBottom="@dimen/padding_xlarge"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:gravity="center"
            android:text="ぎょ"
            android:textSize="@dimen/text_giant" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupAnswers"
        android:layout_below="@id/groupQuestions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/txtAnswer1"
            android:layout_width="@dimen/size_large"
            android:layout_height="@dimen/size_large"
            android:gravity="center"
            android:layout_margin="@dimen/margin_normal"
            android:text="@string/null_string"
            android:textSize="@dimen/text_normal"
            android:background="@drawable/selector_text"/>
        <TextView
            android:id="@+id/txtAnswer2"
            android:layout_width="@dimen/size_large"
            android:layout_height="@dimen/size_large"
            android:gravity="center"
            android:layout_margin="@dimen/margin_normal"
            android:text="@string/null_string"
            android:textSize="@dimen/text_normal"
            android:background="@drawable/selector_text"/>
        <TextView
            android:id="@+id/txtAnswer3"
            android:layout_width="@dimen/size_large"
            android:layout_height="@dimen/size_large"
            android:gravity="center"
            android:layout_margin="@dimen/margin_normal"
            android:text="@string/null_string"
            android:textSize="@dimen/text_normal"
            android:background="@drawable/selector_text"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtScore"
        android:layout_above="@id/groupQuestions"
        android:layout_below="@id/txtExerTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_large"
        android:gravity="center"
        android:text="0/0"
        android:textSize="@dimen/text_huge"/>
</RelativeLayout>
