<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/bottomCharScroll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/botnav_height"
        android:layout_alignParentBottom="true"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/charDisplay"
        android:layout_above="@id/bottomCharScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtStrokeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:text="@string/stroke_header"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txtStroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="あ"
            android:textSize="@dimen/text_giant"/>

        <com.dainv.hiragana.view.GifImageView
            android:id="@+id/gifCharDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_small"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgSwitchKana"
                android:layout_width="@dimen/size_small"
                android:layout_height="@dimen/size_small"
                android:src="@drawable/change"
                android:padding="@dimen/padding_small"/>

            <ImageView
                android:id="@+id/imgCharSound"
                android:layout_width="@dimen/size_small"
                android:layout_height="@dimen/size_small"
                android:padding="@dimen/padding_small"
                android:src="@drawable/speaker"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
