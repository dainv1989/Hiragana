<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_large"
        android:padding="@dimen/padding_large"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:id="@+id/aboutBotNav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/botnav_height"
        android:padding="@dimen/padding_small"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/aboutRateApp"
            android:layout_width="@dimen/botnav_height"
            android:layout_height="match_parent"
            android:src="@drawable/vote"
            android:padding="@dimen/padding_large"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/aboutShare"
            android:layout_width="@dimen/botnav_height"
            android:layout_height="match_parent"
            android:src="@drawable/share"
            android:padding="@dimen/padding_large"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/aboutBotNav"
        android:layout_below="@id/imgLogo"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txtVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/null_string" />

        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="@string/about_author" />

        <TextView
            android:id="@+id/txtAbout"
            android:layout_below="@id/txtVersion"
            android:layout_above="@id/aboutBotNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:text="@string/about_description" />
    </LinearLayout>
</RelativeLayout>
