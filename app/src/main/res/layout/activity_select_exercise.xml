<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:orientation="vertical"
    tools:context=".SelectExerciseActivity">

    <TextView
        android:id="@+id/txtExerciseTitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/title_exercise"
        android:fontFamily="sans-serif"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:background="@color/primary_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtQuestionCount"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:text="number of questions"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textColor="@color/primary_text"/>

        <LinearLayout
            android:id="@+id/groupQACountSetting"
            android:layout_below="@id/txtQuestionCount"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtQACount5"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:text="5"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/primary_text"
                android:background="@drawable/selector_rectangle"/>

            <TextView
                android:id="@+id/txtQACount10"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="10"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/text_small"
                android:textColor="@color/primary_text"
                android:background="@drawable/selector_rectangle"/>

            <TextView
                android:id="@+id/txtQACount15"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="15"
                android:textSize="@dimen/text_small"
                android:textColor="@color/primary_text"
                android:background="@drawable/selector_rectangle"/>

            <TextView
                android:id="@+id/txtQACount20"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:text="20"
                android:textSize="@dimen/text_small"
                android:textColor="@color/primary_text"
                android:fontFamily="sans-serif"
                android:background="@drawable/selector_rectangle"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtExerciseType"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:text="exercise type"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textColor="@color/primary_text"/>

        <LinearLayout
            android:id="@+id/groupExerciseTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgReadingTest"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:src="@drawable/selector_glasses"
                android:background="@drawable/selector_stroke_grey_red"/>

            <ImageView
                android:id="@+id/imgReverseRead"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/selector_reverse"
                android:background="@drawable/selector_stroke_grey_red" />

            <ImageView
                android:id="@+id/imgSoundTest"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:src="@drawable/selector_headphone"
                android:background="@drawable/selector_stroke_grey_red"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCharset"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:text="character set"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textColor="@color/primary_text"/>

        <LinearLayout
            android:id="@+id/groupExercises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/btnSelectHira"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:gravity="center"
                android:layout_marginRight="52dp"
                android:src="@drawable/selector_hiragana"
                android:background="@drawable/selector_round_red"/>

            <ImageView
                android:id="@+id/btnSelectKata"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:layout_marginLeft="52dp"
                android:gravity="center"
                android:src="@drawable/selector_katakana"
                android:background="@drawable/selector_round_red"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
