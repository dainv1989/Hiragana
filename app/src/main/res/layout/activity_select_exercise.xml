<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    tools:context=".SelectExerciseActivity">

    <TextView
        android:id="@+id/txtExerciseType"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:text="select exercise type first"
        android:textSize="16sp"
        android:textColor="@color/primary_text"/>

    <LinearLayout
        android:id="@+id/groupExerciseTypes"
        android:layout_below="@id/txtExerciseType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgReadingTest"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:src="@drawable/selector_glasses"
                android:background="@drawable/selector_aqua_bkg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgSoundTest"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="16dp"
                android:src="@drawable/selector_headphone"
                android:background="@drawable/selector_aqua_bkg"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupQACountSetting"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtQACount5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5"
            android:textSize="@dimen/text_large"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_semi_round1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary_light"/>

        <TextView
            android:id="@+id/txtQACount10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="10"
            android:textSize="@dimen/text_small"
            android:textColor="@color/primary_light"
            android:background="@drawable/selector_rectangle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary_light"/>

        <TextView
            android:id="@+id/txtQACount15"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="15"
            android:textSize="@dimen/text_small"
            android:textColor="@color/primary_light"
            android:background="@drawable/selector_rectangle"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary_light"/>

        <TextView
            android:id="@+id/txtQACount20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="20"
            android:textSize="@dimen/text_small"
            android:textColor="@color/primary_light"
            android:background="@drawable/selector_semi_round2"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtQuestionCount"
        android:layout_above="@id/groupQACountSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:text="number of questions per exercise"
        android:textSize="16sp"
        android:textColor="@color/primary_text"/>

    <LinearLayout
        android:id="@+id/groupExercises"
        android:layout_below="@id/groupExerciseTypes"
        android:layout_above="@id/txtQuestionCount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txtCharset"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:text="select character set"
            android:textSize="16sp"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/btnSelectHira"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:text="@string/button_hiragana"
            android:textSize="13sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_text"/>

        <TextView
            android:id="@+id/btnSelectKata"
            android:layout_below="@id/btnSelectHira"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="@string/button_katakana"
            android:textSize="13sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:background="@drawable/selector_text"/>
    </LinearLayout>
</RelativeLayout>
