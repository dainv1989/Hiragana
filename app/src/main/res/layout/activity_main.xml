<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/txtAppName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_large"
        android:padding="@dimen/padding_large"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:id="@+id/topNav"
        android:layout_below="@id/txtAppName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_xxlarge"
        android:paddingTop="@dimen/padding_large"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconLight"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/size_xlarge"
            android:paddingTop="@dimen/padding_xlarge"
            android:paddingBottom="@dimen/padding_xlarge"
            android:layout_gravity="center"
            android:scaleType="fitEnd"
            android:src="@drawable/light"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMemoRoma"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_large"
            android:gravity="center_vertical"
            android:text="@string/null_string"
            android:textSize="@dimen/text_small"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txtMemoHira"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_large"
                    android:text="@string/null_string"
                    android:textSize="@dimen/text_huge"/>
                <TextView
                    android:id="@+id/txtMemoKata"
                    android:layout_below="@id/txtMemoHira"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_large"
                    android:text="@string/null_string"
                    android:textSize="@dimen/text_huge"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/botnav_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/mainVote"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:padding="@dimen/padding_large"
            android:src="@drawable/vote"/>
        <ImageView
            android:id="@+id/mainShare"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:padding="@dimen/padding_large"
            android:src="@drawable/share"/>
        <ImageView
            android:id="@+id/mainInfo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:padding="@dimen/padding_large"
            android:src="@drawable/info"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainNav"
        android:layout_above="@id/bottomNav"
        android:layout_below="@id/topNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btnHira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="@dimen/size_xxlarge"
            android:layout_margin="@dimen/margin_small"
            android:paddingLeft="@dimen/padding_xxlarge"
            android:paddingRight="@dimen/padding_xxlarge"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_large"
            android:text="hiragana"
            android:background="@drawable/button_bkg"
            android:shadowColor="@android:color/transparent"/>
        <Button
            android:id="@+id/btnKata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="@dimen/size_xxlarge"
            android:layout_margin="@dimen/margin_small"
            android:paddingLeft="@dimen/padding_xxlarge"
            android:paddingRight="@dimen/padding_xxlarge"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_large"
            android:text="katakana"
            android:background="@drawable/button_bkg"
            android:shadowColor="@android:color/transparent"/>
        <Button
            android:id="@+id/btnExer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="@dimen/size_xxlarge"
            android:paddingLeft="@dimen/padding_xxlarge"
            android:paddingRight="@dimen/padding_xxlarge"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_large"
            android:layout_margin="@dimen/margin_small"
            android:text="@string/button_exercise"
            android:background="@drawable/button_bkg"
            android:shadowColor="@android:color/transparent"/>
    </LinearLayout>
</RelativeLayout>
