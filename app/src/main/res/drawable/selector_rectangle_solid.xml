<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="1dp"
        android:right="1dp" android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="@color/red_ninja"
                android:width="1.5dp"/>
            <size android:width="@dimen/size_large"
                android:height="@dimen/size_large"/>
        </shape>
    </item>

    <item android:left="1dp"
        android:right="1dp" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="@color/red_ninja"
                android:width="1.5dp"/>
            <size android:width="@dimen/size_large"
                android:height="@dimen/size_large"/>
        </shape>
    </item>

    <item android:drawable="@drawable/rectangle_stroke_grey"/>
</selector>