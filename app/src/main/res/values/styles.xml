<resources>

    <!-- Base application theme. -->
    <!-- style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="NoAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="TabText" parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>
</resources>
